
extends layout

block append vars
  - bodyclass = 'article-detail'
  - prefix = '../'

block prepend title
  | #{ page.title + ' - '}

block header
  h1= page.title

block content
  article.article
    section.content!= typogr(page.html).typogrify()

block prepend footer
  div.nav
    a(href=contents.index.url) &laquo; Index
